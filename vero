<div class="confetti" id="confetti" aria-hidden="true"></div>

<script>
document.addEventListener("DOMContentLoaded", () => {

  /* ---------- Iconos flotantes ---------- */
  (function makeFloaters(){
    const host = document.querySelector('.float');
    const icons = ['üéÇ','üéà','üéä','üéÅ','üíê','üíì','üéä','üéÅ','üéÇ','üéà','üíê','üíì'];
    for(let i=0;i<24;i++){
      const el = document.createElement('i');
      el.textContent = icons[i%icons.length];
      const size = 18 + Math.random()*22;
      el.style.fontSize = size + 'px';
      el.style.left = Math.random()*100 + 'vw';
      el.style.animationDuration = (10 + Math.random()*8) + 's';
      el.style.animationDelay = (-Math.random()*10) + 's';
      host.appendChild(el);
    }
  })();

  /* ------------------------------ Confeti ------------------------------ */
  function launchConfetti(amount=200){
    const box = document.getElementById('confetti');
    for (let i=0;i<amount;i++){
      const p = document.createElement('i');
      const hue = Math.floor(Math.random()*360);
      p.style.background = `hsl(${hue}, 90%, 60%)`;
      const x = Math.random()*100;
      const xEnd = x + (Math.random()*20-10);
      p.style.setProperty('--x', x+'vw');
      p.style.setProperty('--xend', xEnd+'vw');
      p.style.setProperty('--rot', (Math.random()*180-90)+'deg');
      p.style.setProperty('--rotEnd', (Math.random()*540-270)+'deg');
      p.style.setProperty('--dur', (6+Math.random()*3)+'s');
      box.appendChild(p);
      p.addEventListener('animationend', ()=> p.remove());
    }
  }
//   document.getElementById('btnConfetti').addEventListener('click', ()=> launchConfetti());
// Suponiendo que ya tienes definido el reproductor de SoundCloud como widget
const iframeElement = document.getElementById('scPlayer');
const widget = SC.Widget(iframeElement);

document.getElementById('btnConfetti').addEventListener('click', () => {
    widget.play();      // reproduce la canci√≥n
});

/* Velas + confeti */
const btnCandles = document.getElementById('btnCandles');
btnCandles.addEventListener('click', () => {
  const flames = document.querySelectorAll('.flame');
  const anyVisible = Array.from(flames).some(f => f.style.display !== 'none');

  if (anyVisible) {
    // Velas encendidas ‚Üí se apagan
    flames.forEach(f => f.style.display = 'none');
    btnCandles.textContent = 'üïØ Encender velas';
    launchConfetti(200);  // confeti
    widget.pause();       // pausa la m√∫sica
  } else {
    // Velas apagadas ‚Üí se encienden
    flames.forEach(f => f.style.display = 'block');
    btnCandles.textContent = 'üïØ Soplar velas';
    widget.play();        // reproduce la m√∫sica
  }
});


});
</script>
